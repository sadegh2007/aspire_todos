@using AspireTodo.Todos.Shared

<ul class="todos-list mt-3 border border-gray-800 rounded-lg p-3">

    @if (Loading)
    {
        <li class="text-center">
            <span class="loading loading-spinner"></span>
        </li>
    }

    @if (!Loading && Todos?.Count == 0)
    {
        <li class="text-center text-gray-600">There is no todos</li>
    }
    
    @foreach(var todo in Todos!)
    {
        <TodoListItem Todo="todo" InEditMode="false" />
    }
</ul>


@code {
    [Parameter]
    public List<TodoDto>? Todos { get; set; }
    
    [Parameter]
    public bool Loading { get; set; }
    
    protected override void OnInitialized()
    {
        Todos = [];
        base.OnInitialized();
    }
}